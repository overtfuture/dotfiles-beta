#!/bin/sh

{{ if eq .chezmoi.os "linux" -}}

sudo apt update
sudo apt install -y ack git htop tmux tree zsh neovim

{{ else if eq .chezmoi.os "darwin" -}}
# Install Homebrew
if ! command -v brew &> /dev/null
then
    echo "brew could not be found, installing now"
    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
fi

for PACKAGE in ack chezmoi git git-delta grep htop mosh neovim starship tmux tree zsh code-minimap
do
	brew list $PACKAGE || brew install $PACKAGE
done
{{ end -}}

