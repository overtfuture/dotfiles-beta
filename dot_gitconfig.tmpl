[push]
  default = current
[color]
  ui = auto
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[pull]
  rebase = false
[init]
  defaultBranch = main
[merge]
  command = "vim"
  args = "-d"
[core]
  excludesfile = .gitignore_global
