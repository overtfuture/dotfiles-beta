export ZSH="$HOME/.oh-my-zsh"

# Default Theme
ZSH_THEME="imajes"

# Plugins
plugins=(1password brew docker fnm fzf git git-extras golang kubectl kubectx marked2 node npm vi-mode zsh-interactive-cd zsh-navigation-tools)
ZSH_DISABLE_COMPFIX=true

# Source oh my zsh
source $ZSH/oh-my-zsh.sh

# Aliases
alias zshrc="nvim ~/.zshrc"
alias c="clear"
alias gitclean="git rm -r --cached .;ga ."

# fzf Ctrl-R
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

# Source private customization
if [ -f ~/.zshrc_private ]; then
  source ~/.zshrc_private
fi
